@model WebApplication1.Models.Membre

<div class="min-h-screen flex items-center justify-center bg-green-500 xl:w-[80%]  rounded-tr-lg rounded-xl">
    <div class="bg-white p-8 rounded shadow-md w-96 xl:w-1/2 rounded-2xl">
        <h2 class="text-2xl font-semibold mb-6 text-center text-green-500">Inscription des Adhérents</h2>

        <form asp-action="InscriptionAdherent" method="post">
            <div class="mb-4">
                <label for="Prenom" class="block text-sm font-medium text-gray-700">Prénom :</label>
                <input asp-for="Prenom" class="mt-1 p-2 w-full border rounded-md">
                <span asp-validation-for="Prenom" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label for="Nom" class="block text-sm font-medium text-gray-700">Nom :</label>
                <input asp-for="Nom" class="mt-1 p-2 w-full border rounded-md">
                <span asp-validation-for="Nom" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label for="Adresse" class="block text-sm font-medium text-gray-700">Adresse :</label>
                <input asp-for="Adresse" class="mt-1 p-2 w-full border rounded-md">
                <span asp-validation-for="Adresse" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label for="NumeroTelephone" class="block text-sm font-medium text-gray-700">Numéro de Téléphone :</label>
                <input asp-for="NumeroTelephone" class="mt-1 p-2 w-full border rounded-md">
                <span asp-validation-for="NumeroTelephone" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label for="Email" class="block text-sm font-medium text-gray-700">E-mail :</label>
                <input asp-for="Email" class="mt-1 p-2 w-full border rounded-md">
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label for="DateInscription" class="block text-sm font-medium text-gray-700">Date d'Inscription :</label>
                <input asp-for="DateInscription" type="date" class="mt-1 p-2 w-full border rounded-md">
                <span asp-validation-for="DateInscription" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <button type="submit" class="w-full px-4 py-2 bg-green-500 text-white rounded-md transition-all duration-300 hover:bg-green-600">S'inscrire</button>
            </div>

        </form>
    </div>
</div>
