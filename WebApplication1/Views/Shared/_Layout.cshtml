<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Frontend</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="css/styles.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />

</head>
<body class="font-sans antialiased">
    <header>
        <!-- Navbar -->
        <nav class="bg-green-500 p-4">
            <ul class="flex justify-around items-center text-white">
                <li><a asp-controller="Home" asp-action="Index">Accueil</a></li>
                <li><a asp-controller="Registration" asp-action="InscriptionAdherent">Inscription</a></li>
                <li><a asp-controller="Livre" asp-action="Index">Réservations</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="container mx-auto p-4">
            <!-- Contenu spécifique à chaque page sera inclus ici -->
            @RenderBody()
        </div>
    </main>

    <footer class="bg-black text-white text-center py-4">
        MiniProjet Gestion Bibliothèque Noussair Abellouch | Anass idbella
    </footer>
</body>

</html>